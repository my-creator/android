<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rl_comm_request_act"
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ui.activity.Community.CommunityRequestActivity">

    <!--Toolbar-->
    <RelativeLayout
            android:id="@+id/rl_toolbar_request_community_act"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/community_header"
    >
        <!--btn_back-->
        <RelativeLayout
                android:id="@+id/btn_back_request_community_act"
                android:layout_width="48dp"
                android:layout_height="64dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icn_back_white"
            />

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="게시판요청"
                android:fontFamily="@font/noto_sans_kr_bold"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>

    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="56dp"
            android:layout_below="@+id/rl_toolbar_request_community_act"
            android:layout_marginHorizontal="24dp"
            android:orientation="vertical"
    >
        <!--유튜버 이름-->
        <EditText
                android:id="@+id/et_enter_youtuber_name_request_act"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:textColorHint="@color/greyish"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:hint="유투버 이름을 입력해주세요."
                android:fontFamily="@font/noto_sans_kr_medium"
                android:paddingHorizontal="16dp"
                android:background="@drawable/community_typing_searchbox"
        />

        <!--유튜브 채널 링크-->
        <EditText
                android:id="@+id/et_enter_youtube_channel_request_act"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_marginTop="16dp"
                android:textColorHint="@color/greyish"
                android:textSize="16sp"
                android:layout_gravity="center_vertical"
                android:fontFamily="@font/noto_sans_kr_medium"
                android:hint="유투버 채널 링크를 입력해주세요."
                android:paddingHorizontal="16dp"
                android:background="@drawable/community_typing_searchbox"
        />

        <RelativeLayout
                android:id="@+id/requestBtn_community_request_act"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="48dp"
                android:layout_marginHorizontal="8dp"
        >

            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="42dp"
                    android:background="@drawable/community_pink_searchbox"
            />

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="요청하기"
                    android:textColor= "@color/white"
                    android:textSize="16sp"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:layout_centerInParent="true"
            />


        </RelativeLayout>

    </LinearLayout>

</RelativeLayout>