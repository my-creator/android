<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
>

    <LinearLayout
            android:id="@+id/ll_container_community_act"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
    >
        <!--ImageView-->
        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
        >

            <ImageView
                    android:id="@+id/img_thumbnail_hotpost_community_act"
                    android:layout_width="58dp"
                    android:layout_height="40dp"
                    android:layout_marginLeft="24dp"
                    android:layout_marginRight="9dp"
                    android:layout_marginVertical="10dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icn_img_x"
                    android:background="@drawable/community_thumbnial_image_box"
            />

        </LinearLayout>

        <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_gravity="center_vertical"
        >

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
            >

                <ImageView
                        android:id="@+id/img_hot_icon_community_hot_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginRight="4dp"
                        android:src="@drawable/ic_hot"
                />

                <TextView
                        android:id="@+id/tv_title_community_hot_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:textSize="14sp"
                        android:textColor="@color/black"
                        android:text="안녕하세요^~^"
                />

            </LinearLayout>

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:layout_marginTop="6dp"
            >

                <TextView
                        android:id="@+id/tv_recommendation_community_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#a4a4a4"
                        android:text="추천 10 |"
                />

                <TextView
                        android:id="@+id/tv_comment_hotpost_com_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#a4a4a4"
                        android:text="댓글 10|"
                />

                <TextView
                        android:id="@+id/tv_posttime_hotpost_com_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#a4a4a4"
                        android:text="18:47"
                />

                <TextView
                        android:id="@+id/tv_postcategory_hotpost_com_act"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="10sp"
                        android:textColor="#a4a4a4"
                        android:text="인기 게시판"
                />

            </LinearLayout>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
            android:id="@+id/ll_lastline_rv_hotpost_commu_act"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/white_two"
            android:orientation="horizontal"
            android:layout_marginHorizontal="24dp"
    >

    </LinearLayout>

</LinearLayout>
