<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:background="#F8FAF9"
>
    <LinearLayout
            xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:app="http://schemas.android.com/apk/res-auto"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical"
        >


            <RelativeLayout
                    android:id="@+id/rl_toolbar_vote_frag"
                    android:layout_width="match_parent"
                    android:layout_height="56dp"
                    android:background="@drawable/community_header"
            >

                <TextView
                        android:layout_width="34dp"
                        android:layout_height="27dp"
                        android:textSize="18sp"
                        android:text="투표"
                        android:textColor="@color/white"
                        android:layout_marginBottom="14dp"
                        android:layout_marginEnd="163dp"
                        android:layout_marginStart="162dp"
                        android:layout_marginTop="15dp"
                        app:lineHeight="27sp"
                />
                <TextView
                        android:layout_width="52dp"
                        android:layout_height="20dp"
                        android:textSize="14sp"
                        android:text="투표제안"
                        android:textColor="@color/white"
                        android:layout_alignParentEnd="true"
                        android:layout_marginEnd="18dp"
                        android:layout_marginStart="289dp"
                        android:layout_marginTop="17dp"
                        android:layout_marginBottom="19dp"
                        app:lineHeight="20sp"
                />
            </RelativeLayout>

            <android.support.design.widget.TabLayout
                    android:id="@+id/vote_tab"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:tabSelectedTextColor="@color/violet_pink"
                    app:tabIndicatorColor="@color/violet_pink"
            />

            <android.support.v4.view.ViewPager
                    android:id="@+id/vote_viewpager"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
            >
            </android.support.v4.view.ViewPager>

        </LinearLayout>
    </LinearLayout>
</RelativeLayout>