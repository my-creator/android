<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@color/white"
        tools:context=".UI.Activity.LoginActivity">


    <RelativeLayout
            android:id="@+id/rl_login_act"
            android:layout_width="match_parent"
            android:layout_height="match_parent">


        <!--크리크리 로고-->
        <RelativeLayout
                android:id="@+id/rl_crecre_login_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="186dp">


            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/crecre_icon"
            />
        </RelativeLayout>

        <RelativeLayout
                android:id="@+id/rl_input_login_act"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/rl_crecre_login_act"
                android:layout_marginTop="34dp">
            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="256dp"
                    android:background="@drawable/login_background"
                    android:layout_alignParentBottom="true"
            >

            </RelativeLayout>

            <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="72dp"
                    android:orientation="vertical">

                <!--아이디 editText-->
                <RelativeLayout
                        android:id="@+id/rl_id_et_login_act"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:background="@drawable/img_id_off"
                >

                    <EditText
                            android:id="@+id/activity_login_et_id"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="12dp"
                            android:inputType="textEmailAddress"
                            android:background="@null"
                            android:hint="아이디"
                            android:textCursorDrawable="@null"
                            android:textColorHint="#aaaaaa"
                            android:textSize="12sp"
                    />
                </RelativeLayout>

                <!--비밀번호-->
                <RelativeLayout
                        android:id="@+id/rl_pw_login_act"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="12dp"
                        android:layout_below="@+id/rl_id_et_login_act"
                        android:background="@drawable/img_id_off"
                >

                    <EditText
                            android:id="@+id/activity_login_et_pw"
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:paddingLeft="12dp"
                            android:background="@null"
                            android:textCursorDrawable="@null"
                            android:hint="비밀번호"
                            android:inputType="textPassword"
                            android:textColorHint="#aaaaaa"
                            android:textSize="12sp"/>
                </RelativeLayout>

                <Button
                        android:id="@+id/activity_login_btn"
                        android:layout_width="match_parent"
                        android:layout_height="36dp"
                        android:layout_marginTop="32dp"
                        android:layout_below="@+id/rl_pw_login_act"
                        android:background="@drawable/login_submit_background_selector"
                        android:text="로그인"
                        android:textColor="@drawable/login_btn_text_selector"
                        android:textSize="14sp"/>



                <TextView
                        android:id="@+id/activity_login_txt"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="22dp"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/activity_login_btn"
                        android:text="아직 크리크리 회원이 아니신가요?"
                        android:textColor="#aaaaaa"
                        android:textSize="12sp"/>

                <TextView
                        android:id="@+id/activity_login_txt_join"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_centerHorizontal="true"
                        android:layout_below="@+id/activity_login_txt"
                        android:layout_marginTop="4dp"
                        android:text="1분만에 회원가입하기"
                        android:textColor="@color/violet_pink"
                        android:textSize="12sp"/>

            </RelativeLayout>

        </RelativeLayout>


    </RelativeLayout>



</RelativeLayout>