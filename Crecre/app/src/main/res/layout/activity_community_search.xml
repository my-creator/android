<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#f3f3f3"
        tools:context=".UI.Activity.CommunitySearchActivity"
>

    <!--toolbar-->
    <RelativeLayout
            android:id="@+id/rl_toolbar_community_search_act"
            android:layout_width="match_parent"
            android:layout_height="64dp"
    >
        <!--btn_back-->
        <RelativeLayout
                android:id="@+id/btn_back_community_search"
                android:layout_width="48dp"
                android:layout_height="64dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/btn_back"
            />

        </RelativeLayout>

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:text="검색"
                android:textSize="18sp"
                android:textColor="#ff57f7"
        />

    </RelativeLayout>

    <!--editText-->
    <LinearLayout
            android:id="@+id/et_community_search"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginHorizontal="20dp"
            android:background="#FFFFFF"
            android:layout_below="@+id/rl_toolbar_community_search_act"
    >

        <EditText
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:paddingLeft="16dp"
                android:hint="글 제목, 내용, 게시판 검색"
                android:background="@null"

        />

    </LinearLayout>


    <!--basic search view-->
    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:orientation="vertical"
    >


        <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_search"
        />

        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="28dp"
                android:text="전체 게시판의 글을 검색해보세요"
                android:textSize="14sp"
                android:textColor="#a4a4a4"
        />
    </LinearLayout>


</RelativeLayout>