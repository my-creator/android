<?xml version="1.0" encoding = "utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:app="http://schemas.android.com/apk/res-auto"
                xmlns:tools="http://schemas.android.com/tools"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/background_rounding6"
                android:layout_marginBottom="24dp"
>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
    >
        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="212dp"
                android:id="@+id/rl_test"
        >
            <ImageView
                    android:layout_width="match_parent"
                    android:layout_height="200dp"
                    android:id="@+id/card_main_image_test"
                    android:src="@drawable/logo"
                    android:layout_alignParentTop="true"
                    android:background="@drawable/background_vote_mainimg"
            />
            <ImageView
                    android:id="@+id/rv_item_current_card_stamp_test"
                    android:layout_width="120dp"
                    android:layout_height="120dp"
                    android:foregroundGravity="center"
                    android:layout_centerInParent="true"
                    app:srcCompat="@drawable/icn_stemp"
            />
            <Button
                    android:id="@+id/rv_item_current_card_dayleft_test"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_alignBaseline="@id/card_main_image_test"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/vote_round_pink_rect"
                    android:layout_marginStart="16dp"
                    android:textColor="#ffffff"
                    android:textSize="12sp"
                    android:fontFamily="@font/noto_sans_kr_medium"
            />
            <Button
                    android:id="@+id/rv_item_current_card_isongoing_test"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:text="진행중"
                    android:textSize="12sp"
                    android:layout_alignBaseline="@id/card_main_image_test"
                    android:layout_alignParentBottom="true"
                    android:background="@drawable/vote_round_mint_rect"
                    android:textColor="#ffffff"
                    android:layout_marginStart="120dp"
                    android:fontFamily="@font/noto_sans_kr_medium"
            />

        </RelativeLayout>
        <TextView
                android:id="@+id/rv_item_vote_title_test"
                android:layout_width="260dp"
                android:layout_height="51dp"
                android:textSize="18sp"
                android:layout_marginStart="16dp"
                android:layout_marginTop="14dp"
                android:text="템플스테이 묵언수행하면 가장 먼저 탈락할 것 같은 유튜버는?"
                app:lineHeight="24sp"
                android:fontFamily="@font/noto_sans_kr_regular"
        />
        <TextView
                android:id="@+id/rv_item_vote_explain_test"
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="14sp"
                android:layout_marginTop="12dp"
                android:layout_marginStart="16dp"
                android:layout_marginBottom="28dp"
                android:text="# 이 투표에 대한 운영자의 서브 설명"
                app:lineHeight="18sp"
        />
        <LinearLayout
                android:id="@+id/ll1_test"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
        >
            <ImageView
                    android:id="@+id/item_img1_test"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:layout_marginStart="16dp"
                    android:layout_gravity="center_vertical"
            />
            <TextView
                    android:id="@+id/item_name1_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
            />
            <View
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    android:layout_weight="1"
            />
            <TextView
                    android:id="@+id/vote_num1_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="8dp"
                    android:textSize="14sp"
                    android:textColor="#666666"
                    android:layout_gravity="center_vertical"
            />
            <TextView
                    android:id="@+id/vote_rank1_test"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:textSize="16sp"
                    android:textColor="#333333"
                    android:layout_gravity="center_vertical"
            />
            <ImageView
                    android:id="@+id/vote_check1_test"
                    android:layout_width="28dp"
                    android:layout_height="28dp"
                    app:srcCompat="@drawable/btn_uncheck"
                    android:layout_gravity="center_vertical"
                    android:layout_marginEnd="16dp"
            />
        </LinearLayout>

