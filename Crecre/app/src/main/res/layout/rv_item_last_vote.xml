<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        android:id="@+id/rv_item_last_vote_rl_container"
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="270dp"
        android:layout_height="290dp"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_marginHorizontal="8dp"
android:gravity="center">
    <android.support.v7.widget.CardView
            android:layout_width="260dp"
            android:layout_height="280dp"
            app:cardCornerRadius="6dp"
            app:cardElevation="1dp"
            app:cardPreventCornerOverlap ="true"
            app:cardBackgroundColor="@color/white">
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
            <ImageView
                    android:id="@+id/rv_item_last_vote_iv_image"
                    android:layout_width="match_parent"
                    android:layout_height="144dp"
                    android:background="@drawable/today_post_thumnail_rounding"/>
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">
                <ImageView
                        android:id="@+id/rv_item_last_vote_iv_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:src="@drawable/img_profile"/>
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="1등"
                        android:textSize="20sp"
                        android:textColor="@color/violet_pink"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:lineHeight="24sp"
                        android:layout_marginHorizontal="8dp"/>
                <TextView
                        android:id="@+id/rv_item_last_vote_creator"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="시연조교"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:lineHeight="24sp"/>
            </LinearLayout>
            <TextView
                    android:id="@+id/rv_item_last_vote_content"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="10dp"
                    android:text="템플스테이 묵언수행하면 가장 먼저 탈락할 것 같은 문장이 길어지면 이렇게"
                    android:textSize="14sp"
                    android:lineHeight="20sp"
                    android:textColor="@color/black_two"/>
            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="투표 종료"
                    android:textColor="@color/greyish"
                    android:textSize="16sp"
                    android:lineHeight="18sp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_marginTop="14dp"
                    android:layout_gravity="right|bottom"/>
        </LinearLayout>
    </android.support.v7.widget.CardView>

</RelativeLayout>