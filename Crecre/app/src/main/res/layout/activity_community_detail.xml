<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".UI.Activity.CommunityDetailActivity">

    <!--Toolbar-->
    <RelativeLayout
            android:id="@+id/rl_toolbar_community_detail_act"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="@drawable/community_header"
    >
        <!--btn_back-->
        <RelativeLayout
                android:id="@+id/btn_back_community_detail_act"
                android:layout_width="48dp"
                android:layout_height="64dp">

            <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:src="@drawable/icn_back_white"
            />

        </RelativeLayout>

        <TextView
                android:id="@+id/tv_category_community_detail_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="자유게시판"
                android:textSize="18sp"
                android:textColor="@color/white"
                android:layout_centerInParent="true"
        />

    </RelativeLayout>


    <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="24dp"
            android:layout_below="@+id/rl_toolbar_community_detail_act"
            android:orientation="vertical"
    >

        <TextView
                android:id="@+id/tv_title_community_detail_act"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:layout_marginTop="18dp"
                android:text="종강이 싫은 대학생의 에타후기.jpg"
        />


        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:layout_marginBottom="13dp"
        >

            <ImageView
                    android:layout_width="32dp"
                    android:layout_height="32dp"
                    android:src="@drawable/img_profile"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:layout_marginLeft="10dp"
                    android:layout_gravity="center_vertical"
            >

            <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="10sp"
                    android:textColor="@color/black"
                    android:text="익명"
            />

            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a4a4a4"
                        android:textSize="10sp"
                        android:text="18초 전"
                />

                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textColor="#a4a4a4"
                        android:textSize="10sp"
                        android:text="조회수 21"
                />

            </LinearLayout>

            </LinearLayout>


        </LinearLayout>

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#f0f0f0"
        >

        </LinearLayout>

        <!--Image-->
        <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingHorizontal="16dp"
                android:layout_marginTop="20dp"
        >

            <ImageView
                    android:id="@+id/img_main_community_detail"
                    android:layout_width="296dp"
                    android:layout_height="192dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/icn_img_x"
            />

            <TextView
                    android:id="@+id/tv_main_context_community_detail"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/img_main_community_detail"
                    android:layout_marginTop="14dp"
                    android:textSize="20sp"
                    android:textColor="@color/black"
                    android:text="ㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋㅋ"
            />

            <!--추천,비추천-->
            <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/tv_main_context_community_detail"
                    android:orientation="horizontal"
            >
                <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="48dp"
                        android:layout_height="48dp"
                        android:src="@drawable/icn_like_off"
                />







            </LinearLayout>

        </RelativeLayout>

    </LinearLayout>

    <!--댓글창-->
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:background="#f3f3f3"
    >

    </RelativeLayout>

</RelativeLayout>