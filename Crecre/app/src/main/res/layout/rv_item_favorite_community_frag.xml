<?xml version="1.0" encoding="utf-8"?>

<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="42dp"
        android:orientation="vertical"
>

    <RelativeLayout
            android:id="@+id/rl_item_favorite_container"
            android:layout_width="match_parent"
            android:layout_height="42dp"
            android:paddingHorizontal="10dp"
    >

        <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
        >

            <TextView
                    android:id="@+id/tv_rv_title_community_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="자유게시판"
                    android:fontFamily="@font/noto_sans_kr_medium"
                    android:textSize="16sp"
                    android:textColor="@color/black"
            />

            <ImageView
                    android:id="@+id/btn_favorite_heart_community_frag"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:src="@drawable/icn_look_off"
                    android:background="@drawable/community_favorite_heart_btn"

            />

        </RelativeLayout>

    </RelativeLayout>

    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_marginHorizontal="10dp"
            android:background="#f3f3f3"
    >
    </RelativeLayout>


</LinearLayout>