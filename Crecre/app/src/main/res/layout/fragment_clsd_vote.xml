<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:paddingHorizontal="2dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

    <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:cardCornerRadius="6dp"
            app:cardElevation="3dp"
            app:cardPreventCornerOverlap="true"
            app:cardBackgroundColor="@color/white"
            android:layout_margin="6dp"
    >

        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <ImageView
                android:id="@+id/frag_clsd_vote_iv_img"
                android:scaleType="centerCrop"
                android:layout_width="match_parent"
                        android:layout_height="144dp"/>
            <LinearLayout
                    android:layout_margin="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                <ImageView
                        android:id="@+id/frag_clsd_vote_iv_profile"
                        android:layout_width="40dp"
                        android:layout_height="40dp"/>

                <TextView
                        tools:text="등수"
                        android:id="@+id/frag_clsd_vote_tv_rank"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/violet_pink"
                        android:fontFamily="@font/noto_sans_kr_bold"
                        android:lineHeight="24sp"
                        android:layout_marginHorizontal="8dp"/>

                <TextView
                        tools:text="이름"
                        android:id="@+id/frag_clsd_vote_tv_name"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:textSize="16sp"
                        android:textColor="@color/black"
                        android:fontFamily="@font/noto_sans_kr_medium"
                        android:lineHeight="24sp"/>

            </LinearLayout>

            <TextView
                    tools:text="투표 제목"
                    android:id="@+id/frag_clsd_vote_tv_title"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="8dp"
                    android:layout_marginTop="7dp"
                    android:layout_marginBottom="14dp"
                    android:textSize="14sp"
                    android:layout_weight="1"
                    android:lines="2"
                    android:ellipsize="end"
                    android:lineHeight="20sp"
                    android:textColor="@color/black_two"/>

            <TextView
                    android:text="투표 종료"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/greyish"
                    android:textSize="14sp"
                    android:lineHeight="18sp"
                    android:fontFamily="@font/noto_sans_kr_bold"
                    android:layout_marginBottom="8dp"
                    android:layout_marginRight="8dp"
                    android:layout_gravity="right|bottom"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

</RelativeLayout>